<%- include('partials/header')%>

        <div class="course-list">
            <form action="/find_student" method="POST">
                <h3>Course Registration</h3>
                <p><input type="text" name="student_id" id="" placeholder="Enter Student ID"></p> 
                 <input type="submit" name="" value="Find Student" >
            </form>
          


   <form action="/timetoreg" method="POST">

           
            <table border="0" class="tab">
                <tr>
                    <th>Student-ID</th> <th> Name</th> <th>Phone</th> <th>Email</th>

                </tr>
                <% if(typeof (foundStudents) !== 'undefined'){%>
               <% foundStudents.forEach(function(foundStudent){ %>

                <%    let fullname = foundStudent.firstname + ' ' + foundStudent.lastname %>
               
                <tr>
                    <td><%= foundStudent.student_id %></td> 
                    <td><%= fullname %></td> 
                    <td><%= foundStudent.phone %></td> 
                    <td><%= foundStudent.email%></td>
                </tr>
           <% }) %>
           <% } %>
        </table>


     <table class="table table-striped" id="courses">
        <tr class="act">
            <th class="active">
                
            </th>
            <th class="success">Courses</th>
            <th class="warning">Prices</th>
            <th class="danger">Duration</th>
        </tr>

        <% course.forEach(function(course){ %>
            <tr class="act"> 
                <td class="active">
                    <input type="checkbox" class="select-item checkbox" name="select-item" value="1000" />
                </td>
            
                <td class="success"><%= course.course_name %></td>
                <td class="warning"><%= course.price %></td>
                <td class="danger"><%= course.duration %></td>
            </tr>

        <%   }) %>
        
       
    </table>
